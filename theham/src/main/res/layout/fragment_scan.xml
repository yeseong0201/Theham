<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="명함 보내기"
        android:textColor="#1d1c1c"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.27" />

    <ImageButton
        android:id="@+id/ImageButton1"
        android:layout_width="0dp"
        android:layout_height="146dp"
        android:layout_marginRight="50dp"
        android:background="#1A534bae"
        app:layout_constraintLeft_toLeftOf="@id/send"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/send" />

    <TextView
        android:id="@+id/receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="명함 받기"
        android:textColor="#1d1c1c"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/ImageButton1"
        app:layout_constraintTop_toBottomOf="@id/ImageButton1" />

    <ImageButton
        android:id="@+id/ImageButton2"
        android:layout_width="0dp"
        android:layout_height="146dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="50dp"
        android:background="#1A534bae"
        app:layout_constraintLeft_toLeftOf="@id/receive"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/receive" />


</androidx.constraintlayout.widget.ConstraintLayout>